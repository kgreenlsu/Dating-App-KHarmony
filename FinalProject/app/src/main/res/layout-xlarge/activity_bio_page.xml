<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kgreen.finalproject.BioPage"
    android:background="#ffae36"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lblDirection"
            android:id="@+id/textView21"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.04" />

        <ImageView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/icon"
            android:layout_column="0"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21"
            android:layout_weight="0.37"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblBio"
            android:id="@+id/textView24"
            android:textColor="#f9010107"
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_weight="0.04" />

        <Button
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:text="@string/btnCamera"
            android:id="@+id/btnCapture"
            android:textSize="40dp"
            android:layout_column="0"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText2"
            android:background="#fffff8"
            android:maxLength="250"
            android:layout_column="0"
            android:layout_above="@+id/button"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21"
            android:layout_weight="0.24" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="331dp"
            android:layout_height="91dp"
            android:text="@string/btnFinishBio"
            android:id="@+id/button"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21"
            android:layout_marginBottom="61dp"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:textSize="40dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
